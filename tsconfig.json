{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "types": ["node"],
    "noImplicitAny": false,
    "baseUrl": "./src",
    "paths": {
      "@types": ["types/index.ts"]
    }
  },
  "exclude": ["./node_modules"]
}
